<script>
  document.title = 'Add Item Info Page';
</script>

<h3>
  Add Item Info
</h3>

<form action="/user/item/item_info/new" method="post">
  <div class="form-group">
    <label for="ID">ID : </label>
    <input type="text" class="form-control" name="ID" />
  </div>
  <div class="form-group">
    <label for="Name">Name : </label>
    <input type="text" class="form-control" name="Name" />
  </div>
  <div class="form-group">
    <label for="Type">Type : </label>
    <select class="form-control" name="Type">
      <% item_types.forEach(item_type => { %>
      <option
        label="<%= item_type.Category %>.<%= item_type.Type %>"
        value="<%= item_type.id %>"
      >
        <% }) %>
      </option></select
    >
  </div>
  <div class="form-group">
    <label for="Buy_In_Low">Buy In Price(low) : </label>
    <input type="text" class="form-control" name="Buy_In_Low" />
  </div>
  <div class="form-group">
    <label for="Buy_In_High">Buy In Price(high) : </label>
    <input type="text" class="form-control" name="Buy_In_High" />
  </div>
  <div class="form-group">
    <label for="Sell_Out_Price">Sell_Out_Price : </label>
    <input type="text" class="form-control" name="Sell_Out_Price" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button><br />
  <a href="/user/item/item_info"> Go Back To Item Info List</a>
</form>
