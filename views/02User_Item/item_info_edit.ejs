<script>
  document.title = 'Item Info Edit Page';
</script>
<p>
  edit item info
</p>

<div>
  <form
    action="/user/item/item_info/<%=item_info.id%>/edit?_method=put"
    method="post"
  >
    <div>
      <label for="ID">ID : </label>
      <input
        type="text"
        name="ID"
        class="form-control"
        placeholder="ID"
        value="<%=item_info.ID%>"
      />
    </div>
    <div>
      <label for="Name">Name : </label>
      <input
        type="text"
        name="Name"
        class="form-control"
        placeholder="Name"
        value="<%=item_info.Name%>"
      />
    </div>
    <div class="form-group">
      <label for="Class">Type :</label>
      <select class="form-control" name="Type">
        <option value="<%=type_default._id%>"
          ><%=type_default.Category%>.<%=type_default.Type%></option
        >
        <% item_types.forEach(item_type => { %>
        <option
          label="<%= item_type.Category %>.<%= item_type.Type %>"
          value="<%= item_type.id %>"
        >
          <% }) %>
        </option></select
      >
    </div>
    <div>
      <label for="Buy_In_Low">Buy In(low) : </label>
      <input
        type="text"
        name="Buy_In_Low"
        class="form-control"
        placeholder="Buy_In_Low"
        value="<%=item_info.Buy_In_Low%>"
      />
    </div>
    <div>
      <label for="Buy_In_High">Buy_In_High : </label>
      <input
        type="text"
        name="Buy_In_High"
        class="form-control"
        placeholder="Buy_In_High"
        value="<%=item_info.Buy_In_High%>"
      />
    </div>
    <div>
      <label for="Sell_Out_Price">Sell Out Price : </label>
      <input
        type="text"
        name="Sell_Out_Price"
        class="form-control"
        placeholder="Sell_Out_Price"
        value="<%=item_info.Sell_Out_Price%>"
      />
    </div>
    <a href="/user/item/item_info/<%=item_info.id%>">
      Go Back To Item Info Detail</a
    ><br />
    <a href="/user/item/item_info"> Go Back To Item Info List</a><br />
    <button type="submit">Update Item Market Info</button>
  </form>
</div>

<br />
