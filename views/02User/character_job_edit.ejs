<script>
  document.title = 'Character Job Edit Page';
</script>
<p>
  edit character job
</p>

<div>
  <form
    action="/user/character_job/<%=character_job.id%>/edit?_method=put"
    method="post"
  >
    <div>
      <label for="ID">ID : </label>
      <input
        type="text"
        name="ID"
        class="form-control"
        placeholder="ID"
        value="<%=character_job.ID%>"
      />
    </div>
    <div>
      <label for="Name">Name : </label>
      <input
        type="text"
        name="Name"
        class="form-control"
        placeholder="Name"
        value="<%=character_job.Name%>"
      />
    </div>
    <div class="form-group">
      <label for="Class">Class :</label>
      <select class="form-control" name="Class">
        <option value="<%=class_default._id%>"
          ><%=class_default.Class_Name%></option
        >
        <% character_classes.forEach(character_class => { %>
        <option
          label="<%= character_class.Class_No %>.<%= character_class.Class_Name %>"
          value="<%= character_class.id %>"
        >
          <% }) %>
        </option></select
      >
    </div>
    <div class="form-group">
      <label for="Category">Category :</label>
      <select class="form-control" name="Category">
        <option value="<%=category_default.Category_Name%>"
          ><%=category_default.Category_Name%></option
        >
        <% character_categories.forEach(character_category => { %>
        <option
          label="<%= character_category.Category_ID %>.<%= character_category.Category_Name %>"
          value="<%= character_category.id %>"
        >
          <% }) %>
        </option></select
      >
    </div>
    <a href="/user/character_job/<%=character_job.id%>">
      Go Back To Character Job Detail</a
    ><br />
    <a href="/user/character_job"> Go Back To Character Class List</a><br />
    <button type="submit">Update Character Class</button>
  </form>
</div>

<br />
